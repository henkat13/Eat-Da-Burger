<h1>Burgers!</h1>

<h2>YUMMY BURGERS!</h2>

<ul>
  {{#each burgers}}
    {{#unless full}}
      {{> burgers/burger full=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Yummy, Delicious, MEAT!</h2>

<ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> burgers/burger sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="condiment">Ketchup</label><br>
    <input type="cheese" name="" value="1" checked> Gooey!<br>
    {{!-- <input type="radio" name="sleepy" value="0"> Awake --}}
  </div>

  <button type="submit">Add Burger</button>
</form>
